{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths":{
      "@exceptions/*":["src/exceptions/*"],
      "@config/*":["src/config/*"],
      "@helpers/*":["src/helpers/*"],
      "@modules/*":["src/modules/*"],
      "@admin/*":["src/modules/admin/*"],
      "@auth/*":["src/modules/auth/*"],
      "@common/*":["src/modules/common/*"],
      "@guards/*":["src/guards/*"],
      "@dtos/*":["src/dtos/*"],
    },
    "incremental": true
  }
}
